# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       controllers.Application.index
GET     /login                                  controllers.Application.login
POST    /authenticate                           controllers.Application.authenticate

# Users
GET     /usuario/:id                            controllers.UserController.get(id: Long)
GET     /usuario/cadastro                       controllers.UserController.cadastro
GET     /usuario/:id/recomendacao               controllers.UserController.recomendacao(id: Long)
POST    /usuario/cadastrar                      controllers.UserController.cadastrar

# Recommendation
GET     /recomendacao/:id                       controllers.RecommendationController.get(id: Long)
POST    /recomendacao/:id/avaliar               controllers.RecommendationController.avaliar(id: Long,usuarioId:Long, avaliacao: Double)
POST    /recomendacao/contexto                  controllers.RecommendationController.contexto(hourOfDay : Int, weather : String, lat : Double, lng : Double)
GET     /recomendacao/test/:nome                controllers.RecommendationController.test(nome : String)

# Venues
GET     /poi/:id                                controllers.VenueController.get(id: String)
GET     /poi/:id/comentarios                    controllers.VenueController.comentarios(id: String)
GET     /poi/buscar                             controllers.VenueController.buscar
POST    /poi/buscar-por-categoria/:categories   controllers.VenueController.buscarPorCategorias(categories: String)
GET     /poi/buscar/:latitude/:longitude        controllers.VenueController.getVenues(latitude: Double, longitude: Double)
GET     /poi/buscar-por-tag/:tag                         controllers.VenueController.getVenuesByTag(tag:String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
